<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_authority_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_authority"
        android:minWidth="56dp"
        android:text="-"
        android:onClick="btnPress"/>

    <ImageView
        android:id="@+id/image_authority"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_authority_down"
        android:layout_toLeftOf="@+id/btn_authority_up"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/authority" />

    <Button
        android:id="@+id/btn_authority_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/text_authority"
        android:minWidth="56dp"
        android:text="+"
        android:onClick="btnPress"/>

    <TextView
        android:id="@+id/text_authority"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/image_authority"
        android:layout_alignBottom="@+id/image_authority"
        android:layout_alignLeft="@+id/image_authority"
        android:layout_alignRight="@+id/image_authority"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:text="50"/>

    <EditText
        android:id="@+id/text_expression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_authority"
        android:layout_alignLeft="@+id/layout_buttons"
        android:layout_alignRight="@+id/layout_buttons"
        android:inputType="none"/>
    
    <TextView
        android:id="@+id/text_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_expression"
        android:layout_alignLeft="@+id/layout_buttons"
        android:layout_alignRight="@+id/layout_buttons"
        android:gravity="right"/>

    <TableLayout
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_result"
        android:layout_centerHorizontal="true">
        <TableRow>
            <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:onClick="calcButton"/>
            <Button
                android:id="@+id/btn_8"
                android:text="8"
                android:onClick="calcButton"/>
            <Button
                android:id="@+id/btn_9"
                android:text="9"
                android:onClick="calcButton"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_4"
                android:text="4"
                android:onClick="calcButton"/>
            <Button
                android:id="@+id/btn_5"
                android:text="5"
                android:onClick="calcButton"/>
            <Button
                android:id="@+id/btn_6"
                android:text="6"
                android:onClick="calcButton"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_1"
                android:text="1"
                android:onClick="calcButton"/>
            <Button
                android:id="@+id/btn_2"
                android:text="2"
                android:onClick="calcButton"/>
            <Button
                android:id="@+id/btn_3"
                android:text="3"
                android:onClick="calcButton"/>
        </TableRow>
        <TableRow>
            <LinearLayout android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:text="+"
                    android:onClick="calcButton"/>
                <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="0dp"
                    android:text="-"
                    android:onClick="calcButton"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_0"
                android:text="0"
                android:onClick="calcButton"/>
            <Button
                android:id="@+id/btn_backspace"
                android:text="DEL"
                android:onClick="calcButton"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnCalcCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_buttons"
        android:layout_toLeftOf="@+id/btnCalcOk"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="Cancel"
        android:onClick="calcButton"/>
    
    <Button
        android:id="@+id/btnCalcOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_buttons"
        android:layout_alignRight="@+id/layout_buttons"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="OK"
        android:onClick="calcButton"/>

</RelativeLayout>